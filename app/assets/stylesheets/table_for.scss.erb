$table-for-breakpoint: <%= CtTableFor.config.table_for_breakpoint %> !default;

@media (max-width: $table-for-breakpoint) {
  // table as cards
  .table-for {
		thead {
			display: none;
      visibility: hidden;
		}
		tbody, tr, th, td {
			border: 0;
			display: block;
			padding: 0;
			text-align: left;
		  white-space: normal;
		}

    // give each row a little space
		tr {
      padding: .5rem;
		}
		th[data-title]:before,
		td[data-title]:before {
			content: attr(data-title) ":\00A0";
			font-weight: bold;
		}
		th:not([data-title]) {
			font-weight: bold;
		}

    // hide empty cells
		td:empty {
		    display: none;
		}
    &.table-bordered > tbody > tr > td {
      border-color: transparent;
    }
	}
}

// clickable options
.table-for.table-clickable {
  tr[data-link] {
    cursor: pointer;
    td[data-link-enabled="false"] {
      cursor: default;
    }
  }
}
